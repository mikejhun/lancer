
<div class='contents'>

  <section class='access'>

  <br>
    <div class='container'>

      <div class='content-inner-detail'>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login-form clearix'}) do |f| %>

        <legend>Sign in</legend>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control input-lg' %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
        </div>

        <div class='form-group'>
          <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          <% end -%>
        </div>

        <div class="form-group">
          <%= f.submit "Sign in", class: 'btn btn-primary input-lg btn-block' %>
        </div>

        <% end %>
        <%= render "devise/shared/links" %>

      </div>

    </div>

  </section>

</div>




