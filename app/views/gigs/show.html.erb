	<!-- the middle contents -->
	<div class="contents">
		<section id="job">
			<div class="container">
				<div class="row">
					<h3 class="sub-heading">Gig Detail
						<span class="pull-right">
							<small>
								<%= link_to "&larr; All Gigs".html_safe, search_gigs_path %>
							</small>
						</span>
					</h3>
				<div class="col-xs-12 col-md-8">
					<div class="content-inner-detail">
						<h1 class="sub-heading"><%= @gig.name %> <span class="text-danger"></span></h1>
						<p><i class="fa fa-calendar"></i> <%= @gig.created_at.strftime("%m/%d/%Y") %> | <i class="fa fa-map-marker"></i>
						<%= @gig.location.capitalize %> | <%= @gig.category.name %> <span class="label label-success"><%= number_to_currency(@gig.budget, precision: 2) %></span></p>
						<hr />
						<Legend>Description</Legend>
						<p><%= @gig.description %></p>
						<Legend>Skills Wanted</Legend>
						<ul>
							<% @gig.skills.each do |skill| %>
							<li><%= skill.name %></li>
							<% end %>
						</ul>
					</div>
				</div>
				<div class="col-xs-12 col-md-4">
					<div class="content-inner-detail">
						<legend>Submit a Proposal</legend>
						<%= form_for :proposal, url: gig_proposals_path(@gig) do |f| %>
							<div class="row">
								<div class="col-xs-12 col-md-12">
									<div class="form-group">
									 <%= f.label :bid %>
									 <%= f.text_field :bid, class:'form-control input-lg' %>
									 <small class='help-block'>Amount of your bid.</small>
									</div>
								</div>
								<div class="col-xs-12 col-md-12">
									<div class="form-group">
									 <%= f.label :description %>
									 <%= f.text_area :description, rows: 5, class:'form-control input-lg' %>
									 <small class='help-block'>Explain the skills needed for this gig.</small>
									</div>
								</div>
							</div>

							<br />
							<%= f.submit "Submit Proposal", class: 'btn btn-primary input-lg' %>
						<% end %>
					</div>
				</div>

				<% if @awarded_proposal.present? %>
					<div class='col-xs-12 col-md-8'>
						<h3 class='sub-heading'>Awarded Proposal</h3>
							<div class="panel panel-default">
								<div class="panel-heading">
									<div class="row">
										<div class="col-md-4">
											<h3 class="panel-title"><%= @awarded_proposal.user %></h3>
										</div>
										<div class="col-md-4">
											<h3 class="panel-title">
											Bid: <%= number_to_currency(@awarded_proposal.bid, precision: 2) %>
											</h3>
										</div>
										<div class="col-md-4">
											<h3 class="panel-title">
											Posted: <%= @awarded_proposal.created_at.strftime('%B %d, %Y') %>
											</h3>
										</div>
									</div>
								</div>
								<div class="panel-body">
									<%= @awarded_proposal.description %>
								</div>
							</div>
					</div>
				<% end %>

				<div class="col-xs-12 col-md-8">
					<h3 class="sub-heading">Proposals</h3>

						<% if @proposals.present? %>
							<% @proposals.each do |proposal| %>
								<div class="panel panel-default">
									<div class="panel-heading">
										<div class="row">
											<div class="col-md-4">
												<h3 class="panel-title"><%= proposal.user %></h3>
											</div>
											<div class="col-md-4">
												<h3 class="panel-title">
												Bid: <%= number_to_currency(proposal.bid, precision: 2) %>
												</h3>
											</div>
											<div class="col-md-4">
												<h3 class="panel-title">
												Posted: <%= proposal.created_at.strftime('%B %d, %Y') %>
												</h3>
											</div>
										</div>
									</div>
									<div class="panel-body">
										<%= proposal.description %>
									</div>
									<div class="panel-footer">
										<%= form_for @gig, method: :put do |f| %>
											<%= f.hidden_field :awarded_proposal, value: proposal.id %>
										<%= f.hidden_field :open, value: false %>
											<%= f.submit "Award Proposal" %>
										<% end %>
									</div>
								</div>
							<% end %>
						<% else %>
						<% end %>

				</div>

			</div>
		</section>
	</div>	

