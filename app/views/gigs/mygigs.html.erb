<div class="contents">
	<div class="container">
		<h3>My Gigs <small class='pull-right'><%= @gigs.count %> total</small></h3>
	<table class='table table-striped'>
		<thead>
			<tr>
				<th class="text-center">Status</th>
				<th>Name</th>
				<th>Category</th>
				<th>Budget</th>
				<th class='text-center'>Proposals</th>
				<th colspan='3'></th>
			</tr>
		</thead>
		<tbody>
			<% @gigs.each do |gig| %>
				<tr>
					<td>
						<% if gig.open %>
						Open
						<% else %>
						Closed
						<% end %>
					</td>
					<td><%= link_to gig.name, gig %></td>
					<td><%= gig.category.name %></td>
					<td><%= number_to_currency(gig.budget, precision:2) %></td>
					<td class='text-center'><%= gig.proposals.count %></td>
					<td>Edit</td>
					<td>Delete</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>